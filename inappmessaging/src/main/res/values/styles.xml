<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--Don't add styles unless they are being reused at multiple places-->
  <!--Try not to use xml style inheritance, it will decrease maintainability-->

  <style name="InAppMessaging">
    <item name="android:theme">@style/Theme.MaterialComponents.Light.DarkActionBar</item>
  </style>

  <style name="Shadow" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
    <item name="android:ambientShadowAlpha">1</item>
    <item name="android:spotShadowAlpha">1</item>
  </style>

  <style name="InAppMessaging.CloseButton">
    <!--Default button is black.-->
    <item name="android:src">@drawable/close_button_black</item>
    <item name="android:layout_height">@dimen/modal_close_button_height</item>
    <item name="android:layout_width">@dimen/modal_close_button_width</item>
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="InAppMessaging.CloseButton.Modal" >
    <item name="android:layout_gravity">end</item>
  </style>

  <style name="InAppMessaging.CloseButton.FullScreen">
    <item name="android:layout_gravity">top|end</item>
  </style>

  <style name="InAppMessaging.CloseButton.SlideUp">
    <item name="android:layout_gravity">top|end</item>
  </style>

  <style name="InAppMessaging.TooltipButton">
    <!--Default background as white.-->
    <item name="android:layout_height">@dimen/tooltip__close_button_height</item>
    <item name="android:layout_width">@dimen/tooltip__close_button_width</item>
    <item name="android:background">@drawable/close_button_background</item>
    <item name="android:src">@drawable/close_button</item>
  </style>

  <style name="InAppMessaging.Button">
    <item name="android:paddingLeft">@dimen/modal_button_padding_left_right</item>
    <item name="android:paddingRight">@dimen/modal_button_padding_left_right</item>
    <item name="android:paddingTop">@dimen/modal_button_padding_top</item>
    <item name="android:paddingBottom">@dimen/modal_button_padding_bottom</item>
    <item name="android:maxLines">2</item>
    <item name="android:ellipsize">end</item>
    <item name="android:stateListAnimator">@null</item>s
    <item name="android:textSize">@dimen/modal_button_text_size</item>
    <item name="android:visibility">gone</item>
    <item name="backgroundTint">@android:color/holo_orange_light</item>
    <item name="backgroundTintMode">src_over</item>
    <item name="cornerRadius">@dimen/modal_button_corner_radius</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:layout_height">@dimen/modal_button_height</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_marginTop">@dimen/modal_button_double_margin_top_bottom</item>
    <item name="android:layout_marginBottom">@dimen/modal_button_double_margin_top_bottom</item>
  </style>

  <style name="InAppMessaging.Button.Single">
    <item name="android:layout_weight">1</item>
    <item name="android:layout_marginLeft">@dimen/modal_button_single_margin_left_right</item>
    <item name="android:layout_marginRight">@dimen/modal_button_single_margin_left_right</item>
  </style>

  <style name="InAppMessaging.Button.Double">
    <item name="android:layout_weight">0.5</item>
    <item name="android:layout_marginLeft">@dimen/modal_button_double_margin_left_right</item>
    <item name="android:layout_marginRight">@dimen/modal_button_double_margin_left_right</item>
  </style>

  <style name="InAppMessaging.Button.Double.Left">
    <item name="android:layout_weight">0.5</item>
    <item name="android:layout_marginLeft">@dimen/modal_button_single_margin_left_right</item>
    <item name="android:layout_marginRight">@dimen/modal_button_double_margin_left_right</item>
  </style>

  <style name="InAppMessaging.Button.Double.Right">
    <item name="android:layout_weight">0.5</item>
    <item name="android:layout_marginLeft">@dimen/modal_button_double_margin_left_right</item>
    <item name="android:layout_marginRight">@dimen/modal_button_single_margin_left_right</item>
  </style>

  <style name="InAppMessaging.Text">
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:visibility">gone</item>
    <item name="android:lineSpacingExtra">@dimen/modal_text_body_line_spacing_extra</item>
    <item name="android:textSize">@dimen/modal_text_body_text_size</item>
  </style>

  <style name="InAppMessaging.Text.Modal">
    <item name="android:textAlignment">center</item>
  </style>

  <style name="InAppMessaging.Text.Slide">
    <item name="android:ellipsize">end</item>
  </style>

  <style name="roundedCorners" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">10dp</item>
  </style>

</resources>