<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--Don't add styles unless they are being reused at multiple places-->
  <!--Try not to use xml style inheritance, it will decrease maintainability-->

  <style name="InAppMessaging">
    <item name="android:theme">@style/Theme.MaterialComponents.Light.DarkActionBar</item>
  </style>

  <style name="InAppMessaging.CloseButton">
    <item name="android:layout_height">@dimen/modal_close_button_height</item>
    <item name="android:layout_width">@dimen/modal_close_button_width</item>
  </style>

  <style name="InAppMessaging.CloseButton.Modal">
    <!--Default background as white.-->
    <item name="android:src">@drawable/close_button_white_background</item>
    <item name="android:layout_gravity">end</item>
    <item name="android:layout_marginBottom">@dimen/modal_close_button_margin_bottom</item>
  </style>

  <style name="InAppMessaging.CloseButton.FullScreen">
    <!--Default background as white.-->
    <item name="android:src">@drawable/close_button_white_background</item>
    <item name="android:layout_gravity">top|end</item>
    <item name="android:layout_marginTop">@dimen/full_screen_close_button_margin_top</item>
    <item name="android:layout_marginEnd">@dimen/full_screen_close_button_margin_end</item>
    <item name="android:layout_marginRight">@dimen/full_screen_close_button_margin_end</item>
  </style>

  <style name="InAppMessaging.CloseButton.SlideUp">
    <!--Default background as white.-->
    <item name="android:layout_gravity">top|end</item>
    <item name="android:layout_marginTop">@dimen/full_screen_close_button_margin_top</item>
    <item name="android:layout_marginEnd">@dimen/full_screen_close_button_margin_end</item>
    <item name="android:layout_marginRight">@dimen/full_screen_close_button_margin_end</item>
  </style>

  <style name="InAppMessaging.Button">
    <item name="android:paddingLeft">@dimen/modal_button_padding_left_right</item>
    <item name="android:paddingRight">@dimen/modal_button_padding_left_right</item>
    <item name="android:singleLine">true</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    <item name="android:textSize">@dimen/modal_button_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:visibility">gone</item>
    <item name="backgroundTint">@android:color/holo_orange_light</item>
    <item name="backgroundTintMode">src_over</item>
    <item name="cornerRadius">@dimen/modal_button_corner_radius</item>
    <item name="strokeColor">@android:color/holo_blue_bright</item>
    <item name="strokeWidth">@dimen/modal_button_boarder_stroke_width</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_marginTop">@dimen/modal_button_double_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/modal_button_double_margin_bottom</item>
  </style>

  <style name="InAppMessaging.Button.Single">
    <item name="android:layout_weight">1</item>
    <item name="android:layout_marginLeft">@dimen/modal_button_single_margin_left_right</item>
    <item name="android:layout_marginRight">@dimen/modal_button_single_margin_left_right</item>
  </style>

  <style name="InAppMessaging.Button.Double">
    <item name="android:layout_weight">0.5</item>
    <item name="android:layout_marginLeft">@dimen/modal_button_double_margin_left_right</item>
    <item name="android:layout_marginRight">@dimen/modal_button_double_margin_left_right</item>
  </style>

  <style name="InAppMessaging.Text">
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:visibility">gone</item>
    <item name="android:lineSpacingExtra">@dimen/modal_text_body_line_spacing_extra</item>
    <item name="android:textSize">@dimen/modal_text_body_text_size</item>
  </style>

  <style name="InAppMessaging.Text.Modal">
    <item name="android:layout_marginTop">@dimen/modal_text_body_margin_top</item>
  </style>

  <style name="InAppMessaging.Text.Slide">
    <item name="android:ellipsize">end</item>
  </style>

</resources>