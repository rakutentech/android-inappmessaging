<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    Overrides for Android 13 devices:
    - lineBreakWordStyle (improved Japanese text wrapping)
    -->

    <style name="InAppMessaging.Button">
        <item name="android:paddingLeft">@dimen/modal_button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/modal_button_padding_left_right</item>
        <item name="android:paddingTop">@dimen/modal_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/modal_button_padding_bottom</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:stateListAnimator">@null</item>s
        <item name="android:textSize">@dimen/modal_button_text_size</item>
        <item name="android:visibility">gone</item>
        <item name="backgroundTint">@android:color/holo_orange_light</item>
        <item name="backgroundTintMode">src_over</item>
        <item name="cornerRadius">@dimen/modal_button_corner_radius</item>
        <item name="strokeColor">@color/modal_border_color_light_grey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/modal_button_height</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/modal_button_double_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/modal_button_double_margin_top_bottom</item>
        <item name="android:lineBreakWordStyle">phrase</item>
    </style>

    <style name="InAppMessaging.Text.Modal">
        <item name="android:textAlignment">center</item>
        <item name="android:lineBreakWordStyle">phrase</item>
    </style>

    <style name="InAppMessaging.Text.Slide">
        <item name="android:ellipsize">end</item>
        <item name="android:lineBreakWordStyle">phrase</item>
    </style>

</resources>